{
  "manifest_version": 3,
  "name": "ThreadPrinter",
  "version": "1.0.0",
  "description": "抽取 X/Twitter 线程内容并生成多种格式（Markdown/HTML/PDF/PNG）",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "debugger"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*",
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://x.com/*"],
      "js": ["lib/Readability.js", "content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "preview/preview.html",
        "themes/*.css",
        "utils/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
